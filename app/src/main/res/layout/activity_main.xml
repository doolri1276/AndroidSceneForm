<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/sceneform_ux_fragment"
            android:name="com.google.ar.sceneform.ux.ArFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_bear"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bear"/>

                <ImageView
                    android:id="@+id/iv_cat"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cat"/>

                <ImageView
                    android:id="@+id/iv_cow"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cow"/>

                <ImageView
                    android:id="@+id/iv_dog"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dog"/>

                <ImageView
                    android:id="@+id/iv_elephant"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/elephant"/>

                <ImageView
                    android:id="@+id/iv_ferret"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ferret"/>

                <ImageView
                    android:id="@+id/iv_hippo"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hippopotamus"/>

                <ImageView
                    android:id="@+id/iv_horse"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/horse"/>

                <ImageView
                    android:id="@+id/iv_koala"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/koala_bear"/>

                <ImageView
                    android:id="@+id/iv_lion"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lion"/>

                <ImageView
                    android:id="@+id/iv_reindeer"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/reindeer"/>

                <ImageView
                    android:id="@+id/iv_wolverine"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wolverine"/>

            </LinearLayout>

        </HorizontalScrollView>

    </FrameLayout>

</RelativeLayout>